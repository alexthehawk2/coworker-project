<%- include('partials/header'); -%>
<div class="row">
  <div class="text-center">
    <h1>Editing <%= space.title%></h1>
  </div>
  <div class="col-6 offset-3">
    <form
      action="/spaces/<%= space._id %>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div>
        <label class="form-label" for="name">Name </label>
        <input
          class="form-control"
          type="text"
          name="name"
          id=""
          value="<%= space.title %>"
          required
        />
        <div class="valid-feedback">Looks good.</div>
      </div>
      <div>
        <label class="form-label" for="city">City </label>
        <input
          class="form-control"
          type="text"
          name="city"
          value="<%= locArr[0] %>"
          required
        />
        <div class="valid-feedback">Looks good.</div>
      </div>
      <div>
        <label class="form-label" for="state">State </label>
        <input
          class="form-control"
          type="text"
          name="state"
          value="<%= locArr[1] %>"
          required
        />
        <div class="valid-feedback">Looks good.</div>
      </div>
      <div>
        <label class="form-label" for="imageUrl">Current Image</label>
        <% for(let image of space.image){ %>
          <div>
            <img style="height: 200px;width:200px;" id="space-image" src="<%= image.url %>" alt="">
            <label for="delete">Delete ? </label>
            <input type="checkbox" name="deleteImages[]" value="<%= image.filename %>">
            </div>
          <% } %>  
      </div>
      <div>
        <label class="form-label" for="image">Change Image</label>
        <input id="imageInp" type="file" class="form-control" name="image" multiple>
      </div>
      <div>
        <label class="form-label" for="description">Description </label>
        <textarea
          class="form-control"
          name="description"
          id=""
          cols="30"
          rows="3"
          required
        >
<%= space.description %></textarea
        >
        <div class="valid-feedback">Looks good.</div>
      </div>
      <div>
        <label class="form-label" for="autoSizingInputGroup">Price</label>
        <div class="input-group">
          <div class="input-group-text">$</div>
          <input
            type="number"
            class="form-control"
            id="autoSizingInputGroup"
            placeholder="0.00"
            value="<%= space.price %>"
            name="price"
            required
          />
          <div class="valid-feedback">Looks good.</div>
        </div>
      </div>
      <button class="btn btn-info my-2" type="submit">Confirm Edit</button>
    </form>
    <a href="/spaces">Cancel</a>
  </div>
</div>
<%- include('partials/footer'); -%>
