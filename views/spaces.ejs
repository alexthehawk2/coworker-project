<%- include('partials/header'); -%>
<!-- toast message -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div id="message" class="toast-body"><%if(success){%><%=success%><%}else %><%=error%></div>
  </div>
  
</div>
<h1>Available Coworking Spaces</h1>
<% for (let space of spaces){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= space.image %>" alt="space-image" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= space.title %></h5>
        <p class="card-text"><%= space.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= space.location %></small>
        </p>
        <a class="btn btn-primary" href="/spaces/<%= space._id %>"
          >View <%= space.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
<script src="/utils/toast.js"></script>
<%- include('partials/footer'); -%>
